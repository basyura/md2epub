<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html >
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops" xml:lang="<%= @config.lang %>" lang="<%= @config.lang %>">
  <head>
    <link rel="stylesheet" href="style/epub.css" type="text/css" />
    <title><%= @config.booktitle %> index</title>
  </head>
  <body>
    <header>
        <h1><%= @config.booktitle %></h1>
    </header>
    <nav epub:type="toc" id="toc">
      <ol>
      <% pages.each do |p| %>
          <li><a href="text/<%= p[:file] %>"><%= p[:pagetitle] %></a></li><% end %>
      </ol>
    </nav>
  </body>
</html>
